<html>
    <head>
       {{>headerLink}}
    </head>
    <body>
        {{>navbar}}

        <!---Start Main section----> 
        <div class="container-fluid main_header">
            <div class ="row">
                 <div class="col-md-10 col-12 mx-auto">
                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>                       
                    </div>

                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">Sunday</p>
                            <p id="today_date"> 06 Aug</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get Output Here</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span>0</span><sup>o</sup>C</p>
                                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
        <!---End Main section----> 
      {{>footer}}
      <script src="js/main.js" ></script>
      <script>
        const getCurrentDay =() => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednusday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";
            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            const day = document.getElementById('day');

            day.innerHTML =days;
            }
        getCurrentDay();

        const getCurrentMonth =() =>{
            const months = [
            "Jan", "Feb", "Mar", "Apr", "May", "Jun",
            "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
            ];
            const currentDate = new Date();
            const day = currentDate.getDate();
            const month = months[currentDate.getMonth()];
            const formattedDate = `${day < 10 ? '0' : ''}${day} ${month}`;
            const today_date = document.getElementById('today_date');
            today_date.innerHTML = formattedDate;
        }
        getCurrentMonth();
        </script>

    </body>
</html>